<!DOCTYPE html>

<html lang="es" class="h-full bg-slate-950">

<head>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Planificador de Viajes</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <script>

        tailwind.config = {

            theme: {

                extend: {

                    colors: {

                        brand: {

                            50: "#eef2ff",

                            100: "#e0e7ff",

                            500: "#6366f1",

                            600: "#4f46e5"

                        }

                    },

                    boxShadow: {

                        glow: "0 0 35px rgba(99, 102, 241, 0.25)"

                    }

                }

            }

        };

    </script>

    <script src="https://cdn.jsdelivr.net/npm/@@tailwindplus/elements@1" type="module"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/MyApp.styles.css" asp-append-version="true" />

</head>

<body class="h-full bg-slate-950 text-slate-100">

@{

    string activeTripId = ViewBag.ActiveTripId as string ?? "explorar";

    string activeTripDate = ViewBag.ActiveTripDate as string ?? DateTime.UtcNow.ToString("yyyy-MM-dd");

    int notificationsCount = ViewBag.NotificationsCount is int notifications ? notifications : 3;

}

    <div class="flex min-h-screen flex-col bg-slate-950/90 lg:flex-row">

        <aside class="hidden w-full max-w-xs flex-col border-r border-white/10 bg-slate-950/80 px-8 py-10 backdrop-blur-xl lg:flex">

            <div class="flex items-center gap-3">

                <div class="flex size-11 items-center justify-center rounded-2xl bg-brand-500/10 text-brand-500 shadow-glow">

                    <i data-lucide="navigation" class="size-6"></i>

                </div>

                <div>

                    <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Planificador</p>

                    <p class="text-lg font-semibold text-white">Planificador de Viajes</p>

                </div>

            </div>

            <div class="mt-10 space-y-10 text-sm">

                <div>

                    <p class="text-xs font-semibold uppercase tracking-widest text-slate-500">Inicio</p>

                    <nav class="mt-3 space-y-1">

                        <a asp-controller="Home" asp-action="Index" class="group flex items-center gap-3 rounded-xl px-3 py-2 font-medium text-slate-300 transition hover:bg-white/5 hover:text-white">

                            <i data-lucide="home" class="size-5 text-slate-400 transition group-hover:text-brand-500"></i>

                            <div class="flex flex-col">

                                <span class="text-sm font-semibold">Mis Viajes</span>

                                <span class="text-xs text-slate-500 group-hover:text-slate-300">Resumen de viajes creados</span>

                            </div>

                        </a>

                    </nav>

                </div>

                <div>

                    <div class="rounded-2xl border border-white/5 bg-slate-900/60 p-5">

                        <div class="flex items-center justify-between">

                            <div>

                                <p class="text-xs uppercase tracking-widest text-slate-500">Viaje activo</p>

                                <p class="mt-1 text-base font-semibold text-white">@activeTripId</p>

                            </div>

                            <span class="rounded-full border border-brand-500/60 bg-brand-500/10 px-3 py-1 text-xs font-semibold text-brand-500">Itinerario vivo</span>

                        </div>

                        <div class="mt-4 grid grid-cols-2 gap-3 text-xs text-slate-400">

                            <div>

                                <p class="font-semibold text-slate-300">Fecha destacada</p>

                                <p>@activeTripDate</p>

                            </div>

                            <div>

                                <p class="font-semibold text-slate-300">Colaboradores</p>

                                <p>Equipo coordinado</p>

                            </div>

                        </div>

                    </div>

                    <nav class="mt-5 space-y-1">

                        <a href="/viaje/@activeTripId/itinerario" class="group flex items-center gap-3 rounded-xl px-3 py-2 font-medium text-slate-300 transition hover:bg-white/5 hover:text-white">

                            <i data-lucide="calendar-check" class="size-5 text-slate-400 transition group-hover:text-brand-500"></i>

                            <div class="flex flex-col">

                                <span class="text-sm font-semibold">Itinerario</span>

                                <span class="text-xs text-slate-500 group-hover:text-slate-300">Planifica actividades día a día</span>

                            </div>

                        </a>

                        <div class="ml-11 border-l border-white/5 pl-4">

                            <a href="/viaje/@activeTripId/itinerario/dia/@activeTripDate" class="group flex items-center gap-3 rounded-lg px-2 py-2 text-slate-400 transition hover:bg-white/5 hover:text-white">

                                <i data-lucide="calendar-days" class="size-4 text-slate-500 transition group-hover:text-brand-500"></i>

                                <div class="flex flex-col">

                                    <span class="text-xs font-semibold">Día @activeTripDate</span>

                                    <span class="text-[0.7rem] text-slate-500 group-hover:text-slate-300">Organiza bloques horarios</span>

                                </div>

                            </a>

                        </div>

                        <a href="/viaje/@activeTripId/mapa" class="group flex items-center gap-3 rounded-xl px-3 py-2 font-medium text-slate-300 transition hover:bg-white/5 hover:text-white">

                            <i data-lucide="map" class="size-5 text-slate-400 transition group-hover:text-brand-500"></i>

                            <div class="flex flex-col">

                                <span class="text-sm font-semibold">Mapa del viaje</span>

                                <span class="text-xs text-slate-500 group-hover:text-slate-300">Visualiza rutas y ubicaciones</span>

                            </div>

                        </a>

                        <a href="/viaje/@activeTripId/presupuesto" class="group flex items-center gap-3 rounded-xl px-3 py-2 font-medium text-slate-300 transition hover:bg-white/5 hover:text-white">

                            <i data-lucide="wallet" class="size-5 text-slate-400 transition group-hover:text-brand-500"></i>

                            <div class="flex flex-col">

                                <span class="text-sm font-semibold">Presupuesto</span>

                                <span class="text-xs text-slate-500 group-hover:text-slate-300">Controla gastos y reservas</span>

                            </div>

                        </a>

                        <a href="/viaje/@activeTripId/alojamiento" class="group flex items-center gap-3 rounded-xl px-3 py-2 font-medium text-slate-300 transition hover:bg-white/5 hover:text-white">

                            <i data-lucide="bed-double" class="size-5 text-slate-400 transition group-hover:text-brand-500"></i>

                            <div class="flex flex-col">

                                <span class="text-sm font-semibold">Alojamiento</span>

                                <span class="text-xs text-slate-500 group-hover:text-slate-300">Gestiona estancias y check-in</span>

                            </div>

                        </a>

                        <div class="space-y-1 rounded-2xl border border-white/5 bg-slate-900/60 p-4">

                            <div class="flex items-center justify-between">

                                <div class="flex items-center gap-3 text-slate-300">

                                    <i data-lucide="plane" class="size-5 text-slate-400"></i>

                                    <span class="text-sm font-semibold">Transportes</span>

                                </div>

                                <span class="rounded-full bg-white/5 px-2 py-1 text-[0.65rem] uppercase tracking-widest text-slate-400">Modo viaje</span>

                            </div>

                            <div class="mt-3 space-y-1">

                                <a href="/viaje/@activeTripId/transportes" class="group flex items-center gap-3 rounded-lg px-2 py-2 text-slate-300 transition hover:bg-white/5 hover:text-white">

                                    <i data-lucide="plane" class="size-4 text-slate-500 transition group-hover:text-brand-500"></i>

                                    <span class="text-xs font-semibold">Vuelos</span>

                                </a>

                                <a href="/viaje/@activeTripId/transportes?modo=train" class="group flex items-center gap-3 rounded-lg px-2 py-2 text-slate-400 transition hover:bg-white/5 hover:text-white">

                                    <i data-lucide="train" class="size-4 text-slate-500 transition group-hover:text-brand-500"></i>

                                    <span class="text-xs font-semibold">Trenes</span>

                                </a>

                                <a href="/viaje/@activeTripId/transportes?modo=bus" class="group flex items-center gap-3 rounded-lg px-2 py-2 text-slate-400 transition hover:bg-white/5 hover:text-white">

                                    <i data-lucide="bus" class="size-4 text-slate-500 transition group-hover:text-brand-500"></i>

                                    <span class="text-xs font-semibold">Buses</span>

                                </a>

                                <a href="/viaje/@activeTripId/transportes?modo=car" class="group flex items-center gap-3 rounded-lg px-2 py-2 text-slate-400 transition hover:bg-white/5 hover:text-white">

                                    <i data-lucide="car" class="size-4 text-slate-500 transition group-hover:text-brand-500"></i>

                                    <span class="text-xs font-semibold">Autos y traslados</span>

                                </a>

                            </div>

                        </div>

                        <a href="/viaje/@activeTripId/colaboracion" class="group flex items-center gap-3 rounded-xl px-3 py-2 font-medium text-slate-300 transition hover:bg-white/5 hover:text-white">

                            <i data-lucide="users" class="size-5 text-slate-400 transition group-hover:text-brand-500"></i>

                            <div class="flex flex-col">

                                <span class="text-sm font-semibold">Colaboración</span>

                                <span class="text-xs text-slate-500 group-hover:text-slate-300">Coordina con tu equipo</span>

                            </div>

                        </a>

                    </nav>

                </div>

                <div class="mt-auto">

                    <a href="/notificaciones" class="group flex items-center gap-3 rounded-2xl border border-white/5 bg-slate-900/60 px-4 py-3 text-left transition hover:border-brand-500/50 hover:bg-brand-500/10">

                        <div class="relative">

                            <i data-lucide="bell" class="size-6 text-slate-300 transition group-hover:text-brand-500"></i>

                            <span class="absolute -right-2 -top-2 flex size-6 items-center justify-center rounded-full bg-brand-500 text-xs font-semibold text-white">@notificationsCount</span>

                        </div>

                        <div>

                            <p class="text-sm font-semibold text-white">Notificaciones</p>

                            <p class="text-xs text-slate-500 group-hover:text-slate-300">Recordatorios y alertas pendientes</p>

                        </div>

                    </a>

                </div>

            </div>

        </aside>

        <div class="flex min-h-screen flex-1 flex-col">

            <header class="flex flex-col gap-6 border-b border-white/10 bg-slate-950/70 px-6 py-6 backdrop-blur lg:flex-row lg:items-center lg:justify-between">

                <div>

                    <p class="text-xs uppercase tracking-widest text-slate-500">Panel</p>

                    <h1 class="mt-1 text-2xl font-semibold text-white">@((ViewData["Title"] ?? "Dashboard"))</h1>

                    <p class="mt-1 text-sm text-slate-400">Explora y organiza cada detalle de tus aventuras con claridad.</p>

                </div>

                <div class="flex flex-col gap-3 lg:flex-row lg:items-center">

                    <div class="relative">

                        <i data-lucide="search" class="pointer-events-none absolute left-4 top-1/2 size-4 -translate-y-1/2 text-slate-500"></i>

                        <input type="search" placeholder="Buscar en tus viajes" class="w-full rounded-full border border-white/10 bg-slate-900/70 py-2 pl-11 pr-4 text-sm text-white placeholder:text-slate-500 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/60 lg:w-72" />

                    </div>

                    <div class="flex items-center gap-3 rounded-full border border-white/10 bg-slate-900/70 px-4 py-2 text-sm text-slate-300">

                        <div class="flex size-9 items-center justify-center rounded-full bg-brand-500/20 text-brand-400">

                            <span class="text-sm font-semibold">AV</span>

                        </div>

                        <div class="hidden text-left lg:block">

                            <p class="text-xs uppercase tracking-widest text-slate-500">Coordinador</p>

                            <p class="text-sm font-semibold text-white">Aventurero Viajero</p>

                        </div>

                        <i data-lucide="chevron-down" class="size-4 text-slate-500"></i>

                    </div>

                </div>

            </header>

            <main class="flex-1 px-4 py-10 sm:px-6 lg:px-10">

                @RenderBody()

            </main>

            <footer class="border-t border-white/10 bg-slate-950/80 px-6 py-6 text-center text-xs text-slate-500">

                &copy; 2025 - Planificador de Viajes - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-slate-300 underline-offset-4 hover:text-brand-500 hover:underline">Privacidad</a>

            </footer>

        </div>

    </div>

    <script src="https://unpkg.com/lucide@latest"></script>

    <script>

        document.addEventListener("DOMContentLoaded", () => {

            if (window.lucide) {

                window.lucide.createIcons();

            }

        });

    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>

